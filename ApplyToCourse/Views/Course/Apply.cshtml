@model Candidate
<div class="display-6">
    Apply
</div>
</hr>
<form method="post" asp-action="Apply">
    <div class="text-danger my-2" asp-validation-summary="All"></div>
    <div class="form-group my-2">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="FirstName">FirstName:</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="LastName">LastName:</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label>Age:</label>
        <select class="form-control my-1" asp-for="Age">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>
    <fieldset>
        <legend>Select One Course</legend>
            <p>
                <input id="mvc" type="radio" name="SelectedCourse" value="ASP.NET Core Mvc" checked />
                <Label>ASP.NET Core Mvc</Label>
            </p>
            <p>
                <input id="api" type="radio" name="SelectedCourse" value="ASP.NET Core API" />
                <Label>ASP.NET Core API</Label>
            </p>
            <p>
                <input id="api" type="radio" name="SelectedCourse" value="Blazor" />
                <Label>Blazor</Label>
            </p>
    </fieldset>
    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a class="btn btn-warning" href="/">Home</a>
    </div>
</form>