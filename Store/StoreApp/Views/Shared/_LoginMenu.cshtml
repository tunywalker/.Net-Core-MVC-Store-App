@if(User.Identity.IsAuthenticated)
{
<li class="nav-item">
    <a class="nav-link mr-3" aria-current="page" 
    asp-area="" 
    asp-controller="Account"
    asp-route-returnUrl="@Context.Request.PathAndQuery()" 
    asp-action="Logout">
        <i class="fa-solid fa-user"></i>
        Logout(@User.Identity.Name)
    </a>
</li>
}
else
{
<li class="nav-item">
    <a class="nav-link mr-3" aria-current="page" 
    asp-area="" 
    asp-controller="Account" 
    asp-route-returnUrl="@Context.Request.PathAndQuery()" 
    asp-action="Login">
        <i class="fa-solid fa-user"></i>
        Login
    </a>
</li>
}
