<div class="my-3">
    <h6 class="lead">
        <i class="fa fa-filter text-secondary"></i>
        Filters

    </h6>

</div>
<div class="mt-2">
    <form method="get" asp-action="Index">
        <input type="hidden" name="CategoryId" value="@(Context.Request.Query["CategoryId"])"/>
        <div class="form-group my-2">
            <input class="form-control" name="SearchTerm" placeholder="Search" value="@(Context.Request.Query["SearchTerm"])" /> 
        </div>
        <div class="form-group my-2">
            <input class="form-control" name="MinPrice" placeholder="Min. Price" value="@Context.Request.Query["MinPrice"]"/> 
        </div>
        <div class="form-group my-2">
            <input class="form-control" name="MaxPrice" placeholder="Max. Price" value="@Context.Request.Query["MaxPrice"]"/> 
        </div>
        <div class="form-group my-2">
            <button type="submit" class="btn btn-sm btn-primary">Filter</button>
        </div>
    </form>

</div>