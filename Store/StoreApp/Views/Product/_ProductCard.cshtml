@model Product
<div class="col-sm-12 col-md-4 my-2">

    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="@Model?.ImageUrl" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@Model.ProductName</h5>
            <p class="card-text">@Model.Price</p>
            <a asp-action="get" asp-route-id="@Model.ProductId" class="btn btn-primary">
                <i class="fa-solid fa-arrow-right"></i>
                 Görüntüle</a>
        </div>
    </div>

</div>